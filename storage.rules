rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Vehicle photos: public read, authenticated write
    // Photos are displayed on the public site, so anyone can read.
    // Only authenticated admin users can upload or delete files.
    match /vehicles/{vehicleId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
