rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Car images
    match /cars/{carId}/{allImages=**} {
      allow read: if true;
      // TODO: tighten to request.auth != null once admin auth is implemented (#21)
      allow write: if true;
    }

    // Default: require auth
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
