{
  "name": "nextcar-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "build": "npm run build -w packages/shared && cp -r packages/shared apps/backend/shared && npm run build -w apps/admin && npm run build -w apps/backend && npm run build -w apps/frontend",
    "lint": "npm run lint --workspaces --if-present -- --max-warnings=0",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "verify": "npm run lint && npm run typecheck && npm run test",
    "create-owner": "npm run create-owner --workspace=apps/backend"
  },
  "engines": {
    "node": "20.x"
  },
  "overrides": {
    "vite": "^6.2.0",
    "@vitejs/plugin-react": "^5.0.0"
  }
}